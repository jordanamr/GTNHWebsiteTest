---
import { Image } from "astro:assets";

const { id, title, quests, hours, image, caption = "Screenshot", active = false } = Astro.props;
---

<div id={id} class={`age-panel grid grid-cols-1 lg:grid-cols-2 gap-10 mt-12 ${active ? "" : "hidden"}`}>
  <div>
    <div class="flex items-baseline justify-between text-gray-400 mb-4 text-md sm:text-lg">
      <div><span class="text-gray-300 font-semibold">{quests}</span> quests</div>
      <div class="text-right"><span class="text-gray-300 font-semibold">{hours}</span> hours of gameplay</div>
    </div>

    <h3 class="text-2xl lg:text-4xl font-bold mb-3">{title}</h3>
    <slot name="lead" />
    <slot name="more" />

    <h4 class="text-xl font-semibold mb-4">Challenges</h4>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <slot name="challenges" />
    </div>
  </div>

  <div>
    <div class="p-1 border border-gray-500 rounded-3xl mb-2 sm:mb-4">
      <div class="border border-white rounded-3xl overflow-hidden">
        <div class="aspect-video">
          <Image src={image} alt={`${title} screenshot`} loading="lazy" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
    <div class="flex items-center justify-center text-center gap-2 text-md sm:text-xl md:text-2xl">
      <p class="text-white font-bold">{caption}</p>
      <p class="text-gray-300">by Ahti</p>
    </div>
  </div>
</div>
