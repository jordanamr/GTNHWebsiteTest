---
import { Image } from "astro:assets";

const { age, label, image } = Astro.props;
---

<li class="flex flex-col items-center text-center select-none snap-center">
  <button class="age-bubble flex flex-col items-center w-15 cursor-pointer" data-age={age} aria-label={label}>
    <div
      class={`bubble relative z-10 flex items-center justify-center w-15 h-15 rounded-full border-2 shadow-sm bg-[#13171b] border-[#2a2f37]`}
    >
      <Image src={image} alt="" width={96} height={96} class="icon w-10 h-10 object-contain" />
    </div>
    <span class="label mt-1.5 text-sm md:text-base text-gray-300 max-w-[6rem] text-center block">{label}</span>
  </button>
</li>
