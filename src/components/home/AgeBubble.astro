---
import { Image } from "astro:assets";

const { age, label, image } = Astro.props;
---

<li class="flex flex-col items-center text-center select-none snap-center">
  <button class="age-bubble flex flex-col items-center w-20 cursor-pointer" data-age={age} aria-label={label}>
    <div
      class={`bubble relative z-10 flex items-center justify-center w-20 h-20 rounded-full border-2 shadow-sm bg-[#13171b] border-[#2a2f37]`}
    >
      <Image src={image} alt="" width={128} height={128} class="icon w-14 h-14 object-contain" />
    </div>
    <span class="label mt-2 text-md md:text-lg text-gray-300 max-w-[8rem] text-center block">{label}</span>
  </button>
</li>
